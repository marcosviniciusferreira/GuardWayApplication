<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipos de Ocorrências (Último Mês):"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/guardway_red"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/ll_ocorrencias_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        tools:minHeight="50dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_emergency_call"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="@color/guardway_red"
        android:text="CHAMADA DE EMERGÊNCIA"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        android:paddingStart="24dp"
        android:gravity="center"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>