<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OccurrenceFormActivity">

    <!-- Título do Formulário -->
    <TextView
        android:id="@+id/textFormTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Nova Ocorrência"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnTipoOcorrencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFormTitle" />

    <!-- Campo para Descrição Detalhada -->
    <EditText
        android:id="@+id/txtDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:hint="Descrição detalhada"
        android:inputType="textMultiLine"
        android:minLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spnTipoOcorrencia" />

    <!-- Campo de Endereço (Autocomplete) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescricao" />

    <!-- NOVO: Container para Data e Hora lado a lado -->
    <LinearLayout
        android:id="@+id/layoutDataHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment">

        <!-- Campo para Data (aciona calendário) -->
        <EditText
            android:id="@+id/txtDataSelecionada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Data (DD/MM/AAAA)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/spinner_border"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:inputType="none"
            android:minHeight="48dp"/>

        <!-- Campo para Hora (aciona seletor de tempo) -->
        <EditText
            android:id="@+id/txtHoraSelecionada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Hora (HH:MM)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/spinner_border"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:inputType="none"
            android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Botão de Salvar/Registrar -->
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVoltar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botão de Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSalvar" />

</androidx.constraintlayout.widget.ConstraintLayout>