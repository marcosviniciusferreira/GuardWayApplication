<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/cor_fundo_tela"
    tools:context=".OccurrenceFormActivity">

    <TextView
        android:id="@+id/textFormTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Nova Ocorrência"
        android:textColor="@color/guardway_red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnTipoOcorrencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFormTitle" />

    <EditText
        android:id="@+id/txtDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:hint="Descrição detalhada"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:textColor="@color/cor_texto_padrao"
        android:textColorHint="@color/cor_texto_padrao"
        android:background="@drawable/spinner_border"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spnTipoOcorrencia" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/cor_cartao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescricao" />

    <LinearLayout
        android:id="@+id/layoutDataHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment">

        <EditText
            android:id="@+id/txtDataSelecionada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Data (DD/MM/AAAA)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/spinner_border"
            android:textColor="@color/cor_texto_padrao"
            android:textColorHint="@color/cor_texto_padrao"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:inputType="none"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/txtHoraSelecionada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Hora (HH:MM)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/spinner_border"
            android:textColor="@color/cor_texto_padrao"
            android:textColorHint="@color/cor_texto_padrao"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:inputType="none"
            android:minHeight="48dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:textColor="@color/white"
        android:backgroundTint="@color/guardway_red"
        app:cornerRadius="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVoltar"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoltar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="@color/guardway_red"
        app:strokeColor="@color/guardway_red"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSalvar" />

</androidx.constraintlayout.widget.ConstraintLayout>